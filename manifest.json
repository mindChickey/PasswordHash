
{
  "name": "LightPass",
  "version": "3.2.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "out/background.js"
  },
  "permissions": ["contextMenus", "storage", "clipboardWrite", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["out/contentScript.js"]
    }
  ],
  "commands": {
    "hash-password": {
      "description": "LightPass: Convert password to hash",
      "suggested_key": {
        "default": "Alt+H"
      }
    }
  },
	"action": {
		"default_title": "LightPass",
		"default_popup": "index.html"
  }
}