
{
  "name": "LightPass",
  "version": "3.2.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "public/background.js"
  },
  "permissions": ["contextMenus", "storage", "clipboardWrite", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["public/contentScript.js"]
    }
  ],
  "commands": {
    "hash-password": {
      "description": "LightPass: Convert password to hash",
      "suggested_key": {
        "default": "Alt+H"
      }
    }
  },
	"action": {
		"default_title": "LightPass",
		"default_popup": "public/popup.html",
    "default_icon": {
      "16":  "public/image/icon16.png",
      "32":  "public/image/icon32.png",
      "48":  "public/image/icon48.png",
      "128": "public/image/icon128.png"
    }
  },
  "icons": {
    "16":  "public/image/icon16.png",
    "32":  "public/image/icon32.png",
    "48":  "public/image/icon48.png",
    "128": "public/image/icon128.png"
  }
}